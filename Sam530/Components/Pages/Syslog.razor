@page "/syslog"
@rendermode InteractiveServer
@using System.ComponentModel.DataAnnotations
@using Sam530.Components.Shared
@using DataStore.Models
@using DataStore

<ProtectedPage>
<h3>Syslog Configuration</h3>
<div class="col-6">
    <EditForm Model="@syslogSettings" OnValidSubmit="SaveSettings" FormName="Syslog">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label>Active</label>
            <InputSelect id="active" class="form-control" @bind-Value="syslogSettings!.Active">
                @foreach (Active activeSyslog in Enum.GetValues(typeof(Active)))
                {
                    <option value="@activeSyslog">@activeSyslog.ToString()</option>
                }
            </InputSelect>
        </div>

        <div class="form-group">
            <label>IP Address</label>
            <InputText id="ipAddress" class="form-control" @bind-Value="syslogSettings!.IPAddress" />
            <ValidationMessage For="@(() => syslogSettings.IPAddress)" />
        </div>

        <div class="form-group">
            <label>Protocol Type</label>
            <InputSelect id="protType" class="form-control" @bind-Value="syslogSettings!.ProtocolType">
                @foreach (ProtocolType protocol in Enum.GetValues(typeof(ProtocolType)))
                {
                    <option value="@protocol">@protocol.ToString()</option>
                }
            </InputSelect>
        </div>

        <div class="form-group">
            <label>Use TLS</label>
            <InputSelect id="useTls" class="form-control" @bind-Value="syslogSettings!.UseTLS">
                @foreach (Active activated in Enum.GetValues(typeof(Active)))
                {
                    <option value="@activated">@activated.ToString()</option>
                }
            </InputSelect>
        </div>

        <div style="margin-top:10px">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </EditForm>
</div>

@if (successMessage != null)
{
    <div class="alert alert-success mt-3">@successMessage</div>
}

@if (errorMessage != null)
{
    <div class="alert alert-danger mt-3">@errorMessage</div>
}
</ProtectedPage>

@code {
    private DataStore.DbStore Store = new DbStore();
    private DataStore.Models.Syslog? syslogSettings;
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        syslogSettings = await Store.GetSyslogAsync(1);
    }

    private async void SaveSettings()
    {
        if (IsValidIpAddress(syslogSettings!.IPAddress))
        {
            await Store.UpdateSyslogAsync(syslogSettings);
            successMessage = "Syslog settings have been updated.";
            errorMessage = null;
        }
        else
        {
            errorMessage = "Invalid IP address.";
            successMessage = null;
        }
    }

    private bool IsValidIpAddress(string ipAddress)
    {
        return System.Net.IPAddress.TryParse(ipAddress, out _);
    }
}
